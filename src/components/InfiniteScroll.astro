---
const icons = [
    { name: "offer", link: "/aneic2024" },
    { name: "offer", link: "/aneic2024" },
    { name: "konstruedu", link: "https://konstruedu.com" },
    { name: "aecode", link: "https://www.aecode.ai" },
    { name: "offer", link: "/aneic2024" },
];
---

<div
    class="w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_48px,_black_calc(100%-48px),transparent_100%)]"
>
    <ul
        class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
    >
        {
            icons.map(({ name, link }) => (
                <li>
                    <a href={link}>
                        <img
                            class="mx-2 inline h-16"
                            src={`/partners/${name}.webp`}
                            alt="Transistor"
                        />
                    </a>
                </li>
            ))
        }
    </ul>
    <ul
        class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
        aria-hidden="true"
    >
        {
            icons.map(({ name, link }) => (
                <li>
                    <a href={link}>
                        <img
                            class="mx-2 inline h-16"
                            src={`/partners/${name}.webp`}
                            alt="Transistor"
                        />
                    </a>
                </li>
            ))
        }
    </ul>
</div>
