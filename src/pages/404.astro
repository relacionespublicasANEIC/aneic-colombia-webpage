---
import Frame from "../layouts/Frame.astro";
import Container from "../components/Container.astro";
import HeroTitle from "../components/HeroTitle.astro";
---

<Frame>
    <div class="h-screen flex items-center">
        <Container>
            <div class="flex flex-col items-center">
                <img src="/NotFoundDecoration.svg" class="w-full" alt="" />
                <HeroTitle title="La página no existe" />
                <a
                    href="/"
                    class="p-2 bg-zinc-300 hover:bg-zinc-200 rounded-md"
                >
                    <p class="text-xl">Vuelve a la página principal</p>
                </a>
            </div>
        </Container>
    </div>
</Frame>
